<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User &amp; Payment Information"
        android:textStyle="bold"
        android:background="@drawable/gradiant"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:gravity="center"/>






    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E8ECF4"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:hint="Brand Name"
            android:id="@+id/brand_name"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:padding="15dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey_dark"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"

        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E8ECF4"
            android:gravity="left|center"
android:autoText="false"
            android:inputType="textEmailAddress"
            android:hint="User Name"
            android:layout_weight="1"
            android:padding="15dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey_dark"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="left|center"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:autoText="false"

            android:hint="Varshant Atray"
            android:id="@+id/merchant_name"
            android:layout_weight="1"
            android:padding="15dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey_dark"
            android:textSize="16sp" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"

        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E8ECF4"
            android:gravity="left|center"
android:autoText="false"
            android:inputType="textEmailAddress"
            android:hint="Amount"
            android:layout_weight="1"
            android:padding="15dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey_dark"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="left|center"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:autoText="false"

            android:hint="00"
            android:id="@+id/txtUserAmount"
            android:layout_weight="1"
            android:padding="15dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey_dark"
            android:textSize="16sp" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>






    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E8ECF4"
            android:gravity="left|center"
            android:hint="Mobile Number"
            android:layout_weight="1"
            android:autoText="false"

            android:padding="15dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey_dark"
            android:textSize="16sp" />

 <EditText
            android:id="@+id/txtUserMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
     android:layout_weight="1"
     android:autoText="false"
            android:hint="Enter Mobile Number"
            android:padding="15dp"
     android:inputType="number"
     android:textStyle="bold"
     android:maxLength="10"
            android:textColor="@color/Black"
            android:textColorHint="@color/grey_dark"
            android:textSize="16sp" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:textStyle="bold"

        android:text="Note : \n\nWe collect limited information to enhance your experience. by continuing you agree to our data collection policy."
        android:padding="15dp"
        android:textColor="@color/icon1"
        android:textColorHint="@color/grey_dark"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="16dp"
        android:backgroundTint="@color/icon4"
        android:background="@drawable/round_outline2"
        android:id="@+id/proceed"
        android:textSize="18sp"
        android:layout_margin="10dp"/>

<ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
    android:visibility="gone"
    android:background="@drawable/view_normal_blue_corner"
        android:id="@+id/progress"
        android:textSize="18sp"
        android:layout_margin="10dp"/>


    </LinearLayout>

    </androidx.cardview.widget.CardView>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center"
    android:layout_gravity="center|bottom">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:textStyle="bold"
android:layout_gravity="center|bottom"
        android:text="\n\nExperience peace of mind with our advanced security measures, including encryption, two-factor authentication, and real-time fraud monitoring, ensuring the utmost protection for every transaction you make."
        android:padding="15dp"
        android:textColor="@color/icon1"
        android:textColorHint="@color/grey_dark"
        android:textSize="16sp" />
</RelativeLayout>

    </LinearLayout>